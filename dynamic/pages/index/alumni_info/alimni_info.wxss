page {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  background-color:#F5F5F5;
}
.alimni-info-back {
  background-color: white;
  height: 41%;
  margin: 0;
}
.alimni-info {
  width: 92%;
  height: 100%;
  margin: 0 30rpx 30rpx 30rpx;
  text-align: center;
}

.alimni-info-avatar {
  height: 100rpx;
  width: 100rpx;
  border-radius: 60rpx;
  float: left;
}

.alimni-info-under {
  position: absolute;
  left: 4%;
  margin-top: 120rpx;
}

.alimni-info-img {
  width: 50%;
  height: 40%;
  margin-right: 10%;
  margin-top: 20rpx;
}

.alimni-info-dianzan {
  width: 40rpx;
  height: 40rpx;
  float: right;
}

.alimni-info-user {
  /* position: absolute;
  left: 22.5%; */
  font-size: large;
  margin-right: 20%;
}

.alimni-info-time {
  font-size: 24rpx;
  color: gray;
}

.alimni-info-content {
  margin-top: 10rpx;
  margin-left: 20%;
  font-size: 28rpx;
  text-align: left;
  letter-spacing: 3rpx;
}

.alimni-info-jubao {
  font-size: 24rpx;
  color: gray;
  float: right;
}

.alimni-info-star {
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.alimni-info-star-text {
  font-size: 24rpx;
  color: gray;
  float: left;
  margin: 10rpx;
}

.alimni-info-dianzan-text {
  font-size: 24rpx;
  color: gray;
  float: right;
  margin: 10rpx;
}

.alimni-info-play {
  margin-top: 70rpx;
}

.alimni-info-commonts {
  box-shadow: gray;
  border-top: 1px solid gainsboro;
  /* background-color: rgb(239, 239, 239); */
  height: auto;
  width: 100%;
}

.alimni-info-commonts-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin-left: 50rpx;
  margin-top: 30rpx;
}

.alimni-info-commonts-row {
  width: 90%;
  margin: 20rpx;
}

.alimni-info-commonts-dianzan {
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-top: 40rpx;
}

