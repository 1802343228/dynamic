/* pages/message/alimni_message/alimni_message.wxss */
page {
  background-color: whitesmoke;
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.message-icon {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  margin-top: 22rpx;
}
.message-top {
  display: flex;
  margin: 0 auto;
  background-color: white;
}
.message-back-comm {
  width: 120rpx;
  height: 100rpx;
  border-radius: 60rpx;
  background-color: rgb(35, 123, 210);
  text-align: center;
  margin: 10%;
}

.message-zan {
  width: 120rpx;
  height: 100rpx;
  border-radius: 60rpx;
  background-color: rgb(225, 73, 86);
  text-align: center;
  margin: 10%;
}

.message-news {
  width: 120rpx;
  height: 100rpx;
  border-radius:50rpx;
  background-color: rgb(30, 178, 69);
  text-align: center;
  margin: 10%;
}

.message-text {
  font-size: 30rpx;
  margin-top: 30rpx;
}

.message-title {
  height: 100rpx;
  background-color: white;
  width: 100%;
  margin-top: 30rpx;
}

.message-title-right {
  float: right;
  color: grey;
  font-size: 30rpx;
  margin-top: 30rpx;
  margin-right: 50rpx;
}

.message-title-left {
  float: left;
  font-size: 30rpx;
  margin-top: 30rpx;
  margin-left: 50rpx;
}

.message-line {
  border: 1rpx solid rgb(154, 153, 153);
  margin: 50rpx auto;
  width: 92%;
}