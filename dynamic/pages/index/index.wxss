/**index.wxss**/
page {
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.tab {
  float: left;
  width: 28%;
  text-align: center;
  padding: 25rpx 0;
}
.tab-title {
  position: absolute;
}
.tab-icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.topTabSwiper {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  zoom: 1;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}






.alumni-title {
  margin: 5%;
}
.alumni-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 70rpx;
}

.alumni-post {
  background-color: rgb(95, 154, 222);
  width: 150rpx;
  height: 55rpx;
  color: white;
  border-radius: 60rpx;
  float: right;
  padding: 10rpx;
  text-align: center;
  margin-top: 20rpx;
}

.alimni {
  width: 93%;
  height: auto;
  padding: 20rpx;
  text-align: center;
  margin-top: 30rpx;
  border-bottom: 1rpx solid #ccc;
}

.alimni-info-avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 60rpx;
  float:left;
  margin-top: 10rpx;
}
.alimni-info-icon {
  width: 50rpx;
  height: 50rpx;
  float: right;
}

.alimni-info-img {
  width: 50%;
  height: auto;
  display: inline-block;
  margin-right: 15%;
  margin-top: 20rpx;
}

.alimni-info-dianzan {
  width: 40rpx;
  height: 40rpx;
  float: right;
}

.alimni-info-user {
  position: absolute;
  left: 18%;
  font-size: 35rpx;
  margin-top: 5rpx;
}
.alimni-info-time {
  font-size: 24rpx;
  color: gray;
  margin-left: -150rpx;
}

.alimni-info-content {
  margin-top: 10rpx;
  margin-left: 17%;
  font-size: 35rpx;
  text-align: left;
  letter-spacing: 3rpx;
}

.alimni-info-dianzan-text {
  font-size: 24rpx;
  color: gray;
  float: right;
  margin: 10rpx;
}

.alimni-info-dianzan {
  width: 40rpx;
  height: 40rpx;
  float: right;
}

.alimni-icon {
  width: 40rpx;
  height: 40rpx;
  float: left;
}

.alimni-border {
  border-radius: 50rpx;
  color: gray;
  width: 130rpx;
  height: 55rpx;
  font-size: 26rpx;
  position: absolute;
  left: 18%;
  margin-top: -40rpx;
}

.alimni-comment {
  position: absolute;
  display: flex;
  left: 30%;
  margin-top: 10rpx;
}